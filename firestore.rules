rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read their own profile.
    // All authenticated users can read all profiles to list them in user management.
    // Admins can write to anyone's profile to change their role.
    // Users can write to their own profile.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId 
        || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN';
    }

    // Bookings, halls, notifications are still managed client-side in this version.
    // In a real-world scenario, they would be moved to Firestore with appropriate rules.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
